extends layout

block content
  .container
    .row
      .col-12
        form(id="file-submit-form")
          .form-group
            label(for="file") File Selected:
            input(type="file" class="form-control" id="file" name="file")

          button(type="submit" class="btn btn-primary" id="file-submit") Submit
    .row
      .col-12.py-3

    .row
      .col-12
        form(id="torrent-submit-form")
          .form-group
            label(for="file") Torrent Selected:
            input(type="file" class="form-control" id="torrent" name="file")

          button(type="submit" class="btn btn-primary" id="torrent-submit") Submit
